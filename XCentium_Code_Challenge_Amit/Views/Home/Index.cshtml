@using XCentium_Code_Challenge_Amit.Models
@model XCentium_Code_Challenge_Amit.Models.UrlModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    
    <p class="lead">
        @using (Html.BeginForm())
        {
            @Html.ValidationMessage("WebpageIssue", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group ">
                    @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>

                <div class="form-group">

                </div>
            </div>
        }
    </p>
    
</div>




@if (Model.images != null && Model.images.Count > 0)
{
    <div class="container-fluid">
        <h2>Images from Webpage</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                @if (Model.images.Count > 1)
                {
                    <li class="img-circle center-block active" data-target="#myCarousel" data-slide-to="0"></li>
                    for (int i = 1; i < Model.images.Count; i++)
                    {
                        <li data-target="#myCarousel" data-slide-to=@i></li>
                    }
                }
                else
                {
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                }
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                @if (Model.images.Count > 1)
                {
                    <div class="item active">
                        <img src=@Model.images[0] class="container" style="width:500px; height:500px">
                    </div>
                    for (int i = 1; i < Model.images.Count; i++)
                    {
                        <div class="item">
                            <img src=@Model.images[i] class="container" style="width:500px; height:500px">
                        </div>
                    }
                }
                else
                {
                    <div class="item active">
                        <img src=@Model.images[0] class="container" style="width:500px; height:500px">
                    </div>
                }

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <h2>Top 10 repeating words</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Word</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.WordsFrequency.Count > 0)
                {
                    int counter = 1;
                    foreach (var item in Model.WordsFrequency.OrderByDescending(key => key.Value))
                    {
                        if (counter <= 10)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.Value</td>
                            </tr>
                            counter++;
                        }

                    }
                }
            </tbody>
        </table>
    </div>
}
